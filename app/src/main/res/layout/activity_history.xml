<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/history_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90CAF9"
    android:orientation="vertical"
    tools:context=".HistoryActivity">

    <ProgressBar
        android:id="@+id/one_week_ago_progBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:progressDrawable="@color/banana_yellow"
        app:layout_constraintBottom_toTopOf="@+id/six_days_ago_progBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="One week ago"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/six_days_ago_progBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:progressDrawable="@color/banana_yellow"
        app:layout_constraintBottom_toTopOf="@+id/five_days_ago_progBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/one_week_ago_progBar" />

    <TextView
        android:id="@+id/textView3"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Six days ago"
        app:layout_constraintStart_toStartOf="@+id/six_days_ago_progBar"
        app:layout_constraintTop_toBottomOf="@+id/one_week_ago_progBar" />

    <ProgressBar
        android:id="@+id/five_days_ago_progBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="1"
        android:progressDrawable="@color/banana_yellow"
        app:layout_constraintBottom_toTopOf="@+id/four_days_ago_progBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/six_days_ago_progBar" />



    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Five days ago"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/five_days_ago_progBar"
        app:layout_constraintTop_toBottomOf="@+id/six_days_ago_progBar" />

    <ProgressBar
        android:id="@+id/four_days_ago_progBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:progressDrawable="@color/banana_yellow"
        app:layout_constraintBottom_toTopOf="@+id/three_days_ago_progBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/five_days_ago_progBar" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Four days ago"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/four_days_ago_progBar"
        app:layout_constraintTop_toBottomOf="@+id/five_days_ago_progBar" />

    <ProgressBar
        android:id="@+id/three_days_ago_progBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:progressDrawable="@color/banana_yellow"
        app:layout_constraintBottom_toTopOf="@+id/two_days_ago_progBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/four_days_ago_progBar" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Three days ago"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/three_days_ago_progBar"
        app:layout_constraintTop_toBottomOf="@+id/four_days_ago_progBar" />

    <ProgressBar
        android:id="@+id/two_days_ago_progBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:progressDrawable="@color/banana_yellow"
        app:layout_constraintBottom_toTopOf="@+id/yesterday_progBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/three_days_ago_progBar" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Two days ago"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/two_days_ago_progBar"
        app:layout_constraintTop_toBottomOf="@+id/three_days_ago_progBar" />

    <ProgressBar
        android:id="@+id/yesterday_progBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:progressDrawable="@color/banana_yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/two_days_ago_progBar" />

    <TextView
        android:id="@+id/yesterday_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Yesterday"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/yesterday_progBar"
        app:layout_constraintTop_toBottomOf="@+id/two_days_ago_progBar" />

    <ImageView
        android:id="@+id/comment_imageButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/two_days_ago_progBar"
        app:srcCompat="@drawable/ic_comment_black_48px" />

</androidx.constraintlayout.widget.ConstraintLayout>